<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gcu.todoserver.mapper.TodoMapper">
    <select id="listAllTodo" resultType="Todo">
        select * from todo
    </select>

    <select id="getTodoById" resultType="Todo">
        select * from todo where id=#{id}
    </select>

    <insert id="addTodo">
        insert into todo (text) values (#{text})
    </insert>

    <delete id="deleteTodo">
        delete from todo where id = #{id}
    </delete>

    <update id="updateTodo">
        update todo set text=#{text},lastText=#{lastText},
                        done=#{done},doneDate=#{doneDate},updated=#{updated}
                    where id=#{id}
    </update>
</mapper>